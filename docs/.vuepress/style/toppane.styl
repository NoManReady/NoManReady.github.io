@import './variable.styl'
@import './mixins.styl'

.top-pane
    padding 1em    
    &--result
        margin 2em 0
    &-list
        clearfix()
        padding 1em 0 0 1em
    &-item 
        margin 0 1em 1em 0
        padding .5em 1em
        float left 
        border 1px solid $borderColor
        border-radius .3em
        &--tit
            cursor pointer
        &:hover
            border-color $accentColor
            color $accentColor
