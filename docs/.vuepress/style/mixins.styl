position-absolute(top=0,right=0,bottom=0,right=0)
    top top
    left left
    right right
    bottom bottom

v-pos(pos=middle)
    display inline-block
    vertical-align pos
clearfix()
    &:before,
    &:after
        display table

        content ''
    &:after
        clear both
        overflow hidden

text-overflow($width= 0) 
    overflow hidden
    width 100%-$width
    white-space nowrap
    text-overflow ellipsis